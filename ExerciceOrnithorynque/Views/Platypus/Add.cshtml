@{
    ViewData["Title"] = "Ajout d'un ornithorynque";
}

<h2>@ViewData["Title"]</h2>
<br />
<br />

<style>
    input[type="text"],
    input[type="bool"]
    {
        width: 70%;
        background-color: #e6f7ff;
        border: 1px solid #b3d7ff;
        padding: 8px;
        margin-bottom: 10px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<form method="post" action="@Url.Action("AddList", "Platypus")" class="mx-auto text-center">
    <div class="form-group">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="taille">Taille (en cm):</label>
        <input type="text" id="taille" name="Size" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="poids">Poids (en kg):</label>
        <input type="text" id="poids" name="Weight" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="saitNager">Sait-il nager (True ou False):</label>
        <input type="bool" id="saitNager" name="CanSwim" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>